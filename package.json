{
  "name": "ninit",
  "version": "1.0.0",
  "scripts": {
    "start": "electron .",
    "build": "webpack --config webpack.config.js -p --color",
    "postbuild": "npm run start",
    "build-electron": "webpack --config webpack-electron.config.js -p --color",
    "postbuild-electron": "npm run start",
    "sass-watch": "sass --style expanded --watch css/style.scss:build/style.css",
    "sass-min": "sass --sourcemap=none --style compressed css/style.scss:dist/style.css",
    "package": "electron-packager ./build Ninit --platform=darwin --arch=x64 --overide --out=release"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.0",
    "@types/react": "^16.0.38",
    "@types/react-dom": "^16.0.4",
    "@types/react-redux": "^5.0.15",
    "@types/react-router": "^4.0.22",
    "@types/react-router-dom": "^4.2.4",
    "@types/react-sortable-tree": "^0.1.4",
    "@types/react-dnd-html5-backend": "^2.1.9",
    "copy-webpack-plugin": "^4.5.1",
    "electron-packager": "^11.1.0",
    "fetch-mock": "5.12.1",
    "html-webpack-plugin": "^3.0.6",
    "react-test-renderer": "16.0.0-beta.1",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.12"
  },
  "dependencies": {
    "electron": "^1.8.2",
    "express": "^4.15.3",
    "fs-extra": "^5.0.0",
    "immutable": "^3.8.1",
    "react": "^16.2.0",
    "react-dnd-html5-backend": "^2.5.4",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "react-sortable-tree": "^2.1.0",
    "redux": "3.7.2",
    "shortid": "^2.2.8",
    "toml": "^2.3.3",
    "tomlify-j0.4": "^3.0.0",
    "ts-loader": "^4.0.1",
    "typescript": "^2.7.2"
  }
}
